{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User",
  "type": "object",
  "required": ["id", "email", "username", "password", "name", "address", "phone"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "username": {
      "type": "string",
      "minLength": 1
    },
    "password": {
      "type": "string",
      "minLength": 6
    },
    "name": {
      "type": "object",
      "required": ["firstname", "lastname"],
      "properties": {
        "firstname": { "type": "string", "minLength": 1 },
        "lastname": { "type": "string", "minLength": 1 }
      }
    },
    "address": {
      "type": "object",
      "required": ["city", "street", "number", "zipcode", "geolocation"],
      "properties": {
        "city": { "type": "string" },
        "street": { "type": "string" },
        "number": { "type": "integer" },
        "zipcode": { "type": "string" },
        "geolocation": {
          "type": "object",
          "required": ["lat", "long"],
          "properties": {
            "lat": { "type": "string" },
            "long": { "type": "string" }
          }
        }
      }
    },
    "phone": { "type": "string" }
  }
}
